<%#= render "devise/shared/links" %>


<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px">
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot-password", :style => "color:#000;" %><br />
        </div>
      </div>
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, :id=> "login-username", class: "form-control", :placeholder=>"username or email" %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", :id=> "login-password", class: "form-control", :placeholder=>"password" %>
          </div>

            <div class="input-group">
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me, :id=> "login-remember" %>
                   Remember me
                </label>
              </div>
            </div>
          <div class="actions">
            <%= f.submit "Log in", :id=> "btn-login", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

